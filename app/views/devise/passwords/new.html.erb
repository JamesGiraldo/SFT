<center><h1 class="mov-naranja">¿Olvidaste tu contraseña de <strong>SFT</strong>?</h1></center>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container_session">
  <div class="session">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "full-width" %> <br> <br>
    <%= f.submit "Enviarme restablecer instrucciones de contraseña", class: "btn-primary" %>
        <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
