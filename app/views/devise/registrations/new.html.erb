<center><h1 class="mov-naranja">Regístrate en <strong>SFT</strong></h1></center>
<div class="container_session">
    <div class="session">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.input :email, autofocus: true, placeholder:"Correo" ,autocomplete: "email" %>
        <%= f.input :password_confirmation, placeholder:"Confirme contraseña", autocomplete: "new-password" %>
        <%= f.button :submit, "Crear usuario", class: "btn-primary block full-width m-b" %>
      <%= render "devise/shared/links" %>
      <% end %>
    </div>
</div>
